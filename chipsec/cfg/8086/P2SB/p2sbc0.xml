    <!-- #################################### -->
    <registers>
        <register name="SBREG_BAR" type="pcicfg" offset="0x10" size="4" desc="Sideband Register Access BAR">
            <field name="RBA" bit="24" size="8" desc="Register Base Address"/>
        </register>

        <register name="P2SBC" type="pcicfg" offset="0xE0" size="2" desc="P2SB Configuration Register">
            <field name="HIDE" bit="8" size="1" desc="Hide SBREG_BAR"/>
        </register>

        <register name="P2SB_HIDE" type="pcicfg" offset="0xE1" size="1" desc="P2SB Configuration Register hide-unhide">
            <field name="HIDE" bit="0" size="1" desc="Hide SBREG_BAR"/>
        </register>
    </registers>

</configuration>