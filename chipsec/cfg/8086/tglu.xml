    <register name="IMR_GT_EX_LIMIT" type="mmio" bar="MCHBAR" offset="0x6A58" size="8" desc="IMR GT Exclude Range mask">
        <field name="LOCK" bit="0" size="1" desc="Lock" />
        <field name="LIMIT" bit="10" size="29" desc="Mask" />
    </register>

