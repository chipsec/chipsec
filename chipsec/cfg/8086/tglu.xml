    <register name="IMR_GT_EX_BASE" type="mmio" bar="MCHBAR" offset="0x6A50" size="8" desc="IMR GT Exclude Range base">
        <field name="LOCK" bit="0" size="1" desc="Lock" />
        <field name="BASE" bit="10" size="29" desc="Base" />
